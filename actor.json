{
    "actorSpecification": 1,
    "name": "company-finder",
    "title": "Company Finder by Industry and Location",
    "description": "Searches for companies by industry and location. Returns a list of company names, domains, and locations. Provides different results on each run.",
    "version": "2.0.0",
    "meta": {
      "templateId": "puppeteer-crawler"
    },
    "input": ".actor/INPUT_SCHEMA.json",
    "dockerfile": "./Dockerfile",
    "readme": "./README.md",
    "storages": {
      "dataset": {
        "actorSpecification": 1,
        "title": "Found Companies",
        "description": "Companies found by industry and location search",
        "views": {
          "overview": {
            "title": "Overview",
            "transformation": {
              "fields": [
                "companyName",
                "domain",
                "location",
                "industry"
              ]
            },
            "display": {
              "component": "table",
              "properties": {
                "companyName": {
                  "label": "Company Name",
                  "format": "text"
                },
                "domain": {
                  "label": "Domain",
                  "format": "text"
                },
                "location": {
                  "label": "Location",
                  "format": "text"
                },
                "industry": {
                  "label": "Industry",
                  "format": "text"
                }
              }
            }
          }
        }
      }
    }
  }

